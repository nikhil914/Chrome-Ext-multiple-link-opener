{
  "manifest_version": 3,
  "name": "Link Opener with URL Check",
  "version": "1.0",
  "description": "Opens links in tabs and checks for redirection.",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
